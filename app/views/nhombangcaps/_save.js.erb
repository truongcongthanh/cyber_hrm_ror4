$("ul.errors").html("")
<% if @nhombangcap.errors.any? %>
<% @nhombangcap.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$(".nhombangcap-index").html("<%= escape_javascript(render 'index') %>")
$("#nhombangcap-modal").modal("hide")
<% end %>