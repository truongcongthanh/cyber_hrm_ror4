<div class="modal-header">
  <h3><%= t "nhombangcaps.delete.header" %></h3>
</div>
<div class="modal-body">
  <ul class="errors"></ul>
  <%= t "nhombangcaps.question" %> <b><%= @nhombangcap.ten %></b>?
</div>
<div class="modal-footer">
  <%= link_to nhombangcap_path(@nhombangcap), method: :delete, :data => {remote: true}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-ok-sign"></i> <%= t "yes" %>
  <% end %>
  <%= link_to nhombangcaps_path, class: "btn btn-default", data: {dismiss: "modal"} do %>
      <i class="glyphicon glyphicon-remove-sign"></i> <%= t "no" %>
  <% end %>
</div>