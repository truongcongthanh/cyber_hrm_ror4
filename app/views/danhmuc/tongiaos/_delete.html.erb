<div class="modal-header">
  <h3><%= t "tongiaos.delete.header" %></h3>
</div>
<div class="modal-body">
  <ul class="errors"></ul>
  <%= t "tongiaos.question" %><b><%= @tongiao.ten %></b>?
</div>
<div class="modal-footer">
  <%= link_to tongiao_path(@tongiao), method: :delete, :data => {remote: true}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-ok-sign"></i> <%= t "yes" %>
  <% end %>
  <%= link_to tongiaos_path, class: "btn btn-default", data: {dismiss: "modal"} do %>
      <i class="glyphicon glyphicon-remove-sign"></i> <%= t "no" %>
  <% end %>
</div>