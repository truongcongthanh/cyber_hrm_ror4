<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-hover">
  <thead>
  <tr>
    <th style="width: 150px;"><%= t "quanhuyens.ma" %></th>
    <th><%= sortable "ten", t('quanhuyens.ten') %></th>
    <th><%= sortable "tinhthanhpho_id", t('quanhuyens.tinhthanhpho_id') %></th>
    <td style="width: 60px;">&nbsp;</td>
  </tr>
  </thead>
  <tbody>
  <% @quanhuyens.each do |quanhuyen| %>
      <tr>
        <td><%= quanhuyen.ma %></td>
        <td><%= quanhuyen.ten %></td>
        <td><%= quanhuyen.tinhthanhpho.ten %></td>
        <td><%= link_to edit_quanhuyen_path(quanhuyen), data: {remote: true}, :title => t('edit') do %>
              <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to quanhuyen_delete_path(quanhuyen), data: {remote: true}, :title => t('delete') do %>
              <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr class="text-center">
    <td colspan="4">
      <%= will_paginate @quanhuyens, renderer: BootstrapPagination::Rails %>
    </td>
  </tr>
  </tfoot>
</table>