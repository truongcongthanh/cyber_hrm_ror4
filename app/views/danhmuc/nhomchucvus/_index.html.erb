<table class="table table-hover ta">
  <thead>
  <tr>
    <th style="width: 150px;"><%= t "nhomchucvus.ma" %></th>
    <th><%= t "nhomchucvus.ten" %></th>
    <th><%= t "nhomchucvus.diengiai" %></th>
    <td style="width: 60px;">&nbsp;</td>
  </tr>
  </thead>
  <tbody>
  <% @nhomchucvus.each do |nhomchucvu| %>
      <tr>
        <td><%= nhomchucvu.ma %></td>
        <td><%= nhomchucvu.ten %></td>
        <td><%= nhomchucvu.diengiai %></td>
        <td><%= link_to edit_danhmuc_nhomchucvu_path(nhomchucvu), data: {remote: true}, :title => t('edit') do %>
              <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to danhmuc_nhomchucvu_delete_path(nhomchucvu), data: {remote: true}, :title => t('delete') do %>
              <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
  </tfoot>
</table>
