<div class="modal-header">
  <h3><%= t "quoctiches.delete.header" %></h3>
</div>
<div class="modal-body">
  <ul class="errors"></ul>
  <%= t "quoctiches.question" %><b><%= @quoctich.ten %></b>?
</div>
<div class="modal-footer">
  <%= link_to quoctich_path(@quoctich), method: :delete, :data => {remote: true}, class: "btn btn-danger" do %>
      <i class="glyphicon glyphicon-ok-sign"></i> <%= t "yes" %>
  <% end %>
  <%= link_to quoctiches_path, class: "btn btn-default", data: {dismiss: "modal"} do %>
      <i class="glyphicon glyphicon-remove-sign"></i> <%= t "no" %>
  <% end %>
</div>