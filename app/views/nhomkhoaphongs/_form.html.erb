<%= form_for(@nhomkhoaphong, :remote => true, :html => {:class => "form-horizontal", :role => 'form'}) do |f| %>
    <div class="col-lg-12">
      <% if @nhomkhoaphong.errors.any? %>
          <div class="alert alert-block alert-error">
            <h2>Oops !</h2>
            <ul>
              <% @nhomkhoaphong.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="form-group <%= 'error' if @nhomkhoaphong.errors[:ma].present? %>">
        <label for="ma"><%= t "nhomkhoaphongs.ma" %></label>
        <%= f.text_field :ma, :class => "form-control", :maxlength => "10" %>
      </div>
      <div class="form-group <%= 'error' if @nhomkhoaphong.errors[:ten].present? %>">
        <label for="ten"><%= t "nhomkhoaphongs.ten" %></label>
        <%= f.text_field :ten, :class => "form-control", :maxlength => "100" %>
      </div>
      <div class="form-group pull-right">
        <%= link_to nhomkhoaphongs_path, :class => "btn btn-default" do %>
            <i class="glyphicon glyphicon-chevron-left"></i> <%= t "back" %>
        <% end %>
        <button type="submit" class="btn btn-primary">
          <i class="glyphicon glyphicon-floppy-save"></i> <%= t "save" %>
        </button>
      </div>
    </div>
    <div class="col-lg-3"></div>
<% end %> 