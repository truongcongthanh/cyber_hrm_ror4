<div id="nhanviens_sidebar">
  <div class="row">
    <h2 class="text-capitalize text-primary">
      <i class="glyphicon glyphicon-user"></i>
      <%= t "employees" %>
    </h2>

    <div class="list-group text-capitalize">
      <%= link_to new_nhanvien_path, :data => {remote: true}, :class => 'list-group-item' do %>
          <i class="glyphicon glyphicon-plus-sign"></i> <%= t('new') %>
      <% end %>
      <a href="#" class="list-group-item">
        <i class="glyphicon glyphicon-bell"></i>
        <%= t "nhanviens.list_of_employees_unsigned" %>
        <span class="badge">25</span>
      </a>
      <a href="#" class="list-group-item">
        <i class="glyphicon glyphicon-list"></i>
        <%= t "nhanviens.list_of_employees_signed" %>
        <span class="badge">25</span>
      </a>
      <a href="#" class="list-group-item">
        <i class="glyphicon glyphicon-list-alt"></i>
        <%= t "nhanviens.reports" %>
        <span class="badge">25</span>
      </a>
    </div>
  </div>
  <div class="row">
    <div class="well profile">
      <div class="col-sm-12">
        <div class="col-xs-12 col-sm-12 text-center">
          <figure>
            <img src="/assets/male.jpg" class="img-circle img-responsive">
          </figure>
        </div>
        <div class="col-xs-12 col-sm-12">
          <h4 class="text-capitalize text-center text-primary">Trương Công Thành</h4>

          <p><strong><%= t "nhanviens.ngaysinh" ":" %> </strong>19/04/1991</p>

          <p><strong><%= t "nhanviens.khoaphong" ":" %> </strong>Lập trình web </p>

          <p><strong><%= t "nhanviens.chucvu" ":" %> </strong>Nhân viên </p>

          <p><strong><%= t "nhanviens.nganhdaotao" ":" %></strong>
            <span class="tags">Tin học</span>
          </p>

          <p><strong><%= t "nhanviens.bangcap" ":" %></strong>
            <span class="tags">Đại học</span>
          </p>
        </div>
      </div>
      <div class="col-xs-12 text-center">
        <button class="btn btn-success btn-block">
          <span class="glyphicon glyphicon-pencil"></span> <%= t "nhanviens.edit.header" %>
        </button>
        <div class="btn-group dropup btn-block">
          <button type="button" class="btn btn-primary btn-block dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-cog"></i> <%= t "nhanviens.options" %>
          </button>
          <ul class="dropdown-menu text-left" role="menu">
            <li><a href="#"><span class="glyphicon glyphicon-envelope pull-right"></span> Send an email </a></li>
            <li><a href="#"><span class="glyphicon glyphicon-list pull-right"></span> Add or remove from a list </a>
            </li>
            <li><a href="#"><span class="glyphicon glyphicon-lock pull-right"></span> Khóa người dùng </a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>